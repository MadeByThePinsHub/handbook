// Editor settings for VS Code
// Editing this file should follows Microsoft's VS Code reference for this file

{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000, // save unsaved stuff automatically every 30 seconds.
    "git.alwaysSignOff": true,  // Signing off is important to avoid lies in commits + copyright issues.
    "git.autofetch": true,
    "git.autofetchPeriod": 120,
    "git.autorefresh": true,
    "git.autoRepositoryDetection": true
}